{
    "name": "dotkernel/dot-controller",
    "type": "library",
    "description": "DotKernel controller like middleware component with plugin support",
    "license": "MIT",
    "homepage": "https://github.com/dotkernel/dot-controller",
    "keywords": [
        "controller",
        "plugin",
        "laminas",
        "mezzio",
        "service-manager"
    ],
    "authors": [
        {
            "name": "DotKernel Team",
            "email": "team@dotkernel.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "psr/http-message": "^1.0",
        "laminas/laminas-servicemanager": "^3.4",
        "dotkernel/dot-event": "^3.0",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "mezzio/mezzio-template": "^2.0",
        "mezzio/mezzio-helpers": "^5.3",
        "phpunit/phpunit": "^9.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Dot\\Controller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DotTest\\Controller\\": "test/"
        }
    }
}
